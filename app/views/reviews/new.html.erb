<header id="content_header">
	<h1> Submit a Review for <%= link_to @movie.title, @movie %>
	</h1></header>

	<%= form_for([@movie, @review]) do |f| %>
  <%= render "shared/errors", object: @review %>
  <fieldset>
    <ol>
      <p class="required">
      	<%= f.label :stars %>
      	<% Review::STARS.each do |star| %>
        	<%= f.radio_button :stars, star %> <%=star%>
         <% end %>
      </p>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 7, placeholder: "What did you think?"  %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", @movie, class: 'button' %>
    </p>
  </fieldset>
<% end %>